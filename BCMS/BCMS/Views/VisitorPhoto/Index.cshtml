@model IEnumerable<BCMS.Models.VisitorPhoto>

@{
    ViewBag.Title = "Index";
}


@section Styles{
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css" type="text/css" />

    <link href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css" type="text/css" />
}

@section Scripts{
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>
}


<body background=https://wallpapercave.com/wp/wp3205211.png>

    <div class="row">
        @*Last visitor: &ensp; &ensp; &ensp; &ensp; &ensp; &ensp; &ensp; &ensp;Gained access: @ViewData["necunoscut0"]
        Last2 visitor: &ensp; &ensp; &ensp; &ensp; &ensp; &ensp; &ensp; &ensp;Gained access: @ViewData["necunoscut1"]
        Last3 visitor: &ensp; &ensp; &ensp; &ensp; &ensp; &ensp; &ensp; &ensp;Gained access: @ViewData["necunoscut2"]*@
        <br />
        <div class="column">
            <div id="px" style="color:black;">
                <h1 style="padding-left:40%;">Last visitor</h1></div>
                @*<img alt="" src="@ViewData["l"]" style="height:300px;width:300px;" />*@
            </div>
        <div class="column">
            @*<div id="px" style="color:white;">
                Last visitor: &ensp; &ensp; &ensp; &ensp; &ensp; &ensp; &ensp; &ensp;Gained access: @ViewData["necunoscut0"]</div>*@
                <img alt="" src="@ViewData["lastPerson"]" style="height:300px;width:300px;" />
            </div>
        <div class="column">
            <div id="px" style="color:black; padding-right:50%;">
               <h1 style="color:@ViewData["culoare"]">Door @ViewData["necunoscut"]</h1>
            </div>
            @*<div id="px" style="color:white;">Last3 visitor: &ensp; &ensp; &ensp; &ensp; &ensp; &ensp; &ensp; &ensp;Gained access: @ViewData["necunoscut2"]</div>*@
            @*<img alt="" src="@ViewData["l"]" style="height:300px;width:300px;" />*@
        </div>
    </div>

    <table id="example" class="table table-striped table-bordered">
        <thead>
            <tr>
                @*<th>
                        @Html.DisplayNameFor(model => model.Mac)
                    </th>*@
                <th>
                    Name
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Photo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                </th>
            </tr>
        </thead>
        <tbody>
            @{int i = 1; }
            @foreach (var item in Model)
            {
                <tr>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.Mac)
                        </td>*@
                    @*<td>
                            @Html.DisplayFor(modelItem => item.Photo)
                        </td>*@
                    @*@{ViewBag.visitorsName.First(item => item.Mac == item.Mac).name;
                        }*@
                    <td>
                        @ViewData[item.Mac]
                    </td>
                    <td>
                        @*<img style="max-width:100px; max-height:100px;" src="data:image/*;base64,@(Encoding.UTF8.GetString(item.Photo))">*@
                        <img alt="" src="@ViewData[Convert.ToString(i)]" style="height:100px;width:100px;" />
                        @{ i++;}

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>


<style>
    .table {
        background-color: white;
    }

    label {
        color: black;
    }

    .dataTables_info {
        color: white;
    }
    .column {
        float: left;
        width: 33.33%;
        padding-left: 20px;
    }

    /* Clear floats after the columns */
    .row:after {
        content: "";
        display: table;
        clear: both;
    }
    .container.body-content{
        background: white;
    }
    div.col-sm-12.col-md-6:nth-of-type(1) {
        float: right;
        visibility: hidden;
    }
</style>